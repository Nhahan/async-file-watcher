{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist/mjs",
    "lib": ["es5", "es6"],
    "strict": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
